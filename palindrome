package string;

public class Ispalindrome {
    public static void main(java.lang.String args[]){
            System.out.println(ispalindrome(121486));
            }
            
            static boolean ispalindrome(int x){
                 int temp =x;
                int reverse = 0;
                while(x>0)
                {
                    int digit = x%10;
                    reverse=(reverse*10)+digit;
                    x=x/10;
                }
                if(reverse==temp)
                {
                    return true;
                }
                return false;
            }

    
}
